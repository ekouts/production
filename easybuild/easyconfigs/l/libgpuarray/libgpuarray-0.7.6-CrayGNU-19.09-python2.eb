easyblock = 'CMakeMake'

name = 'libgpuarray'
version = '0.7.6'
versionsuffix = '-python2'

homepage = 'http://deeplearning.net/software/libgpuarray/'
description = "Library to manipulate tensors on the GPU."

toolchain = {'name': 'CrayGNU', 'version': '19.09'}
toolchainopts = {'pic': True, 'verbose': False}

source_urls = ['https://github.com/Theano/%(name)s/releases/download/v%(version)s/']
sources = [SOURCE_TAR_GZ]
checksums = ['887b6433a30282cb002117da89b05812c770fd9469f93950ff3866ddd02bfc64']

builddependencies = [
    ('CMake', '3.14.1', '', True),
    ('PyExtensions', '2.7.15.7'),
]
dependencies = [
    ('cray-python/2.7.15.7', EXTERNAL_MODULE),
]

exts_list = [('libgpuarray', '0.7.6', {'modulename': 'pygpu', 'source_tmpl': '%(name)s-%(version)s.tar.gz', 'req_py_minver': '7', 'buildcmd': 'build_ext', 'source_urls': ['https://github.com/Theano/libgpuarray/releases/download/v%(version)s/'], 'checksums': ['887b6433a30282cb002117da89b05812c770fd9469f93950ff3866ddd02bfc64'], 'req_py_majver': '2'})]
modextrapaths = {'PYTHONPATH': 'lib/python2.7/site-packages'}
exts_defaultclass = 'PythonPackage'

sanity_check_paths = {
    'files': ['lib/%(name)s.so', 'lib/%(name)s-static.a'],
    'dirs': ['include/gpuarray', 'lib/python2.7/site-packages'],
}

moduleclass = 'lib'
